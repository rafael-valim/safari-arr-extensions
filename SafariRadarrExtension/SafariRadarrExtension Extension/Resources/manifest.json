{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Radarr Movie Adder",
  "short_name": "Radarr Adder",
  "version": "1.0.0",
  "description": "Add movies to Radarr from IMDB, Rotten Tomatoes, TMDb, Letterboxd, and TheTVDB with one click.",
  "author": "Rafael Valim",
  "homepage_url": "https://github.com/rafael-valim/safari-arr-extensions",
  "icons": {
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": [
        "https://www.imdb.com/*",
        "https://www.rottentomatoes.com/*",
        "https://www.themoviedb.org/*",
        "https://letterboxd.com/*",
        "https://thetvdb.com/*",
        "https://www.thetvdb.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.imdb.com/title/*",
        "https://www.rottentomatoes.com/m/*",
        "https://www.themoviedb.org/movie/*",
        "https://letterboxd.com/film/*",
        "https://thetvdb.com/movies/*",
        "https://www.thetvdb.com/movies/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure Radarr Connection"
  },
}
